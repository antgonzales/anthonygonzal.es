---
// src/components/TableOfContents.astro
const { headings } = Astro.props;

// You can filter to only include certain heading levels
const toc = headings.filter((heading: any) => heading.depth >= 2 && heading.depth <= 3);
---

<nav class="toc">
  <h2>Table of Contents</h2>
  <ul>
    {toc.map((heading: any) => (
      <li class={`heading-${heading.depth}`}>
        <a href={`#${heading.slug}`}>
          {heading.text}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .toc {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 2rem;
  }
  
  .toc h2 {
    font-size: 1.2rem;
    margin-top: 0;
  }
  
  .toc ul {
    list-style: none;
    padding-left: 0;
  }
  
  .heading-3 {
    padding-left: 1.5rem;
  }
  
  .toc a {
    color: #333;
    text-decoration: none;
  }
  
  .toc a:hover {
    text-decoration: underline;
  }
</style>
